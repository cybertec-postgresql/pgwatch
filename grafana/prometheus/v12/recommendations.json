      },
      "pluginVersion": "12.1.0",
      "targets": [
        {
          "expr": "topk(10, (pgwatch_stat_statements_shared_blks_hit{dbname=~\"$dbname\"} / (pgwatch_stat_statements_shared_blks_hit{} + pgwatch_stat_statements_shared_blks_read{} + 0.01) * 100) < 95 and pgwatch_stat_statements_calls{} > 10)",
          "format": "table",
          "instant": true,
          "legendFormat": "Cache Hit %",
          "refId": "A"
