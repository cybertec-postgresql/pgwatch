        {
          "expr": "pgwatch_stat_statements_total_time{dbname=~\"$dbname\"}",
          "format": "table",
          "instant": true,
          "legendFormat": "Total Time (ms)",
          "refId": "B"
        },
        {
          "expr": "pgwatch_stat_statements_calls{dbname=~\"$dbname\"}",
          "format": "table",
          "instant": true,
          "legendFormat": "Calls",
          "refId": "C"
        }
      ],
      "title": "Queries with Low Cache Hit Ratio (<95%)",
      "transformations": [
        {
          "id": "joinByField",
          "options": {
            "byField": "queryid",
            "mode": "outer"
          }
        },
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "__name__": true,
              "instance": true,
              "job": true,
              "Time": true
            },
            "includeByName": {},
            "indexByName": {},
            "renameByName": {
              "dbname": "Database",
              "queryid": "Query ID",
              "Value #A": "Cache Hit %",
              "Value #B": "Total Time (ms)",
              "Value #C": "Calls"
            }
          }
        }
      ],
      "type": "table"
